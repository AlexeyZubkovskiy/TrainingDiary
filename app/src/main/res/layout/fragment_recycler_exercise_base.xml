<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="@dimen/size_5_dp"
    android:weightSum="100">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_400_dp"
        android:layout_marginTop="@dimen/size_10_dp"
        android:background="@color/grey_dark_transparent"
        android:padding="@dimen/size_5_dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_recycler_exercise_base_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:paddingBottom="@dimen/size_15_dp"
        android:paddingTop="@dimen/size_15_dp">

        <Button
            android:id="@+id/fragment_recycler_exercise_add_new_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:background="@drawable/green_add_button"
            android:gravity="center"
            android:padding="@dimen/size_5_dp" />

        <Button
            android:id="@+id/fragment_recycler_exercise_sync_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:layout_marginLeft="@dimen/size_45_dp"
            android:layout_marginRight="@dimen/size_45_dp"
            android:background="@drawable/purple_upload_button"
            android:gravity="center"
            android:padding="@dimen/size_5_dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/fragment_recycler_exercise_back_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:background="@drawable/back_button"
            android:gravity="center"
            android:padding="@dimen/size_5_dp" />
    </LinearLayout>


</LinearLayout>