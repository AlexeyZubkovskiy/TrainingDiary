<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_10_dp"
    android:paddingBottom="@dimen/size_10_dp"
    android:background="@color/black"
    android:orientation="horizontal"
    android:weightSum="100"
    >
    <LinearLayout
        android:layout_width="@dimen/size_150_dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="90"
        android:gravity="center"
        android:layout_marginBottom="@dimen/size_15_dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5_dp"
            android:text="category"
            android:textSize="@dimen/standard_text_size15"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blue_bright"
            android:id="@+id/fragment_new_training_pattern_exercise_category_tv"/>
        <TextView
            android:id="@+id/fragment_new_training_pattern_exercise_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size25"
            android:text="exercise name "
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/standard_text_size17"
                android:textColor="@color/green_bright"
                android:text="@string/quantity_approaches"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/size_10_dp"/>
            <EditText
                android:layout_width="@dimen/size_50_dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/standard_text_size25"
                android:hint="0"
                android:textColorHint="@color/red_transparent"
                android:textColor="@color/red_bright"
                android:gravity="center"
                android:background="@color/grey_dark_transparent"
                android:layout_marginStart="@dimen/size_10_dp"
                android:maxLength="2"
                android:padding="1dp"
                android:inputType="numberDecimal|textShortMessage"
                android:id="@+id/fragment_new_training_pattern_approaches_et"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:layout_gravity="center">
        <Button
            android:id="@+id/fragment_new_training_pattern_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:padding="@dimen/very_small_padding"
            android:gravity="center"
            android:background="@drawable/green_add_button"
            android:clickable="true"
            />
    </LinearLayout>
</LinearLayout>