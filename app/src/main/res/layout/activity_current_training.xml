<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/abl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_exercise_base_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme = "@style/AppTheme"
                android:background="@color/grey_dark_transparent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title Toolbar"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    android:textSize="@dimen/standard_text_size20"
                    android:singleLine="true"
                    android:id="@+id/activity_exercise_base_toolbar_title_tv"
                    android:layout_gravity="center"
                    />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_exercise_base_container"
            android:layout_below="@id/abl_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:paddingBottom="@dimen/size_15_dp"
                android:paddingTop="@dimen/size_15_dp"
                android:layout_gravity="right|bottom">

                <Button
                    android:id="@+id/activity_training_ok_button"
                    android:layout_width="@dimen/size_45_dp"
                    android:layout_height="@dimen/size_45_dp"
                    android:background="@drawable/ok_button"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/size_10_dp"
                    android:layout_marginStart="@dimen/size_10_dp" />

                <Button
                    android:id="@+id/activity_training_exercise_info_button"
                    android:layout_width="@dimen/size_45_dp"
                    android:layout_height="@dimen/size_45_dp"
                    android:layout_marginEnd="@dimen/size_10_dp"
                    android:layout_marginStart="@dimen/size_10_dp"
                    android:background="@drawable/clear_button"
                    android:gravity="bottom"
                    />

                <Button
                    android:id="@+id/activity_training_previous_button"
                    android:layout_width="@dimen/size_45_dp"
                    android:layout_height="@dimen/size_45_dp"
                    android:layout_marginEnd="@dimen/size_10_dp"
                    android:layout_marginStart="@dimen/size_10_dp"
                    android:background="@drawable/left_button"
                    android:gravity="center"
                    android:padding="@dimen/size_5_dp" />

                <Button
                    android:id="@+id/fragment_training_next_button"
                    android:layout_width="@dimen/size_45_dp"
                    android:layout_height="@dimen/size_45_dp"
                    android:background="@drawable/right_button"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/size_10_dp"
                    android:layout_marginStart="@dimen/size_10_dp"/>
                <Button
                    android:id="@+id/activity_training_back_button"
                    android:layout_width="@dimen/size_45_dp"
                    android:layout_height="@dimen/size_45_dp"
                    android:layout_marginEnd="@dimen/size_10_dp"
                    android:layout_marginStart="@dimen/size_10_dp"
                    android:background="@drawable/back_button"
                    android:gravity="center"
                    />
            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
