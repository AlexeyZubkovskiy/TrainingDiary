<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20_dp"
        android:textColor="@color/green_normal"
        android:text="@string/exercises_order"
        android:textSize="@dimen/standard_text_size25"
        android:textStyle="bold"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_300_dp"
        android:layout_marginTop="@dimen/size_10_dp"
        android:background="@color/grey_dark_transparent"
        android:padding="@dimen/size_5_dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_new_training_exercises_order_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:paddingBottom="@dimen/size_15_dp"
        android:paddingTop="@dimen/size_15_dp">

        <Button
            android:id="@+id/fragment_new_training_exercises_order_start_training_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:background="@drawable/ok_button"
            android:gravity="center"
            android:padding="@dimen/size_5_dp" />

        <Button
            android:id="@+id/fragment_new_training_exercises_order_clear_choises_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:layout_marginLeft="@dimen/size_45_dp"
            android:layout_marginRight="@dimen/size_45_dp"
            android:background="@drawable/clear_button"
            android:gravity="center"
            android:padding="@dimen/size_5_dp" />

        <Button
            android:id="@+id/fragment_new_training_exercises_order_back_button"
            android:layout_width="@dimen/size_45_dp"
            android:layout_height="@dimen/size_45_dp"
            android:background="@drawable/back_button"
            android:gravity="center"
            android:padding="@dimen/size_5_dp" />
    </LinearLayout>

</LinearLayout>