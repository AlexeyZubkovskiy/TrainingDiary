<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/exercise_base_list_pattern_item_layout"
        android:clickable="true"
        android:background="@drawable/button_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5_dp"
            android:text="category"
            android:textSize="@dimen/standard_text_size15"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blue_bright"
            android:id="@+id/exercise_base_list_pattern_category_tv"/>
        <TextView
            android:id="@+id/exercise_base_list_pattern_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size25"
            android:text="exercise name "
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"

            />
    </LinearLayout>

</LinearLayout>